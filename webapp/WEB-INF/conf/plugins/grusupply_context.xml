<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >
    
    <!-- DAO -->
    <bean id="grusupply.indexerActionDAO"
        class="fr.paris.lutece.plugins.grusupply.business.daemon.IndexerActionDAO" />
        
    <bean id="grusupply.demandDAO"  class="fr.paris.lutece.plugins.grubusiness.business.demand.MockDemandDAO" />  
    <bean id="grusupply.notificationDAO"  class="fr.paris.lutece.plugins.grubusiness.business.notification.MockNotificationDAO" />
    <bean id="grusupply.storageService" class="fr.paris.lutece.plugins.grubusiness.business.demand.DemandService">
      <constructor-arg ref="grusupply.demandDAO"/>
      <constructor-arg ref="grusupply.notificationDAO"/>
    </bean>
    
    <!-- REST -->
    <bean id="grusupply.grurestdatabase" class="fr.paris.lutece.plugins.grusupply.web.rs.GRUSupplyRestService"/>
       
    
    <!-- STORAGE SERVICE -->
    <!-- <bean id="grusupply.storageService" class="fr.paris.lutece.plugins.grustoragedb.service.DatabaseNotificationStorageService"/> -->
    
    <!-- NOTIFICATION SERVICE -->
   <bean id="grusupply.notificationService" class="fr.paris.lutece.plugins.grusupply.service.NotificationService"/>  
   
    <!-- IDENTITYSTORE BEAN -->
    <bean id="grusupply.identitystore.simpleRestTransport" class="fr.paris.lutece.plugins.identitystore.web.service.SimpleRestTransport" />
    <bean id="grusupply.identitystore.httpTransport" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/identitystore/</value>
        </property>
        <property name="httpTransport">
            <ref bean="grusupply.identitystore.simpleRestTransport"/>
        </property>
    </bean>       
    <bean id="grusupply.identitystore.service" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="grusupply.identitystore.httpTransport"/>
    </bean>
    
    
</beans>
